@{
    ViewData["Title"] = "Session 🌻";

    // Objective: Display the User's name if they submitted it to show on the page.
    string? username = Context.Session.GetString("UserName");
}

<div class="text-center">

    @if (username == null)
    {
        <h1>Please Enter a Username below!</h1>
    }
    else
    {
        <h1>Welcome @username!</h1>
    }


    <form asp-action="Login" method="post">
        <label for="UserName">User Name : </label>
        <input type="text" name="UserName">

        <input class="btn btn-success border" type="submit" value="Login">
    </form>


    <div>
        <a asp-action="Player">
            <button class="btn btn-success mt-3 border text-light">View Player Page</button>
        </a>
    </div>

    <div>
        <a asp-action="Logout">
            <button class="btn btn-danger mt-3 border">Log Out</button>
        </a>
    </div>
</div>